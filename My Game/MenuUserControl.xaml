<UserControl x:Class="My_Game.MenuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:My_Game"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Name="UserControlMenu">
    <StackPanel HorizontalAlignment="Center">
        <Label HorizontalContentAlignment="Center" Name="labelNewGame" Foreground="White" FontSize="30" Height="50" Width="170" TextBlock.FontStyle="Italic">
            <Label.Content>
               Новая Игра
            </Label.Content>
        </Label>
        <Label HorizontalContentAlignment="Center" Name="labelExit" Margin="0,40, 0, 0" Foreground="White" FontSize="30" Height="42" Width="100" TextBlock.FontStyle="Italic">
            <Label.Content>
                Выход
            </Label.Content>
        </Label>
    </StackPanel>
</UserControl>
